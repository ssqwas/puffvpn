{
  "name": "puffvpn",
  "version": "0.10.5",
  "description": "VLESS VPN Client",
  "author": "ssqwas",
  "repository": {
    "type": "git",
    "url": "https://github.com/ssqwas/puffvpn.git"
  },
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run react-dev\" \"wait-on http://localhost:3000 && electron .\"",
    "react-dev": "react-scripts start",
    "build": "react-scripts build",
    "electron-build": "npm run build && electron-builder",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "generate-icons": "electron-icon-builder --input=./public/icon.svg --output=./build"
  },
  "build": {
    "appId": "com.puffvpn.app",
    "productName": "PuffVPN",
    "directories": {
      "output": "dist6"
    },
    "extends": null,
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/electron-updater/**/*"
    ],
    "extraResources": [
      {
        "from": "xray",
        "to": "xray",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.png",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "PuffVPN",
      "runAfterFinish": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "ssqwas",
      "repo": "puffvpn"
    }
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version"
    ]
  }
}
